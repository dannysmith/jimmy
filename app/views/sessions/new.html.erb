<p id="notice"><%= notice %></p>

<%= form_with(url: login_path, local: true) do |f| %>
  <div class="field">
    <%= f.label :username_or_email %>
    <%= f.text_field :username_or_email %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
